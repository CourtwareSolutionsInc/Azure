@model ProjectSettingsModel

@{
    Layout = "~/Views/Shared/_Master.Desktop.Project.cshtml";
}

<div id="project-administration">

    <div class="tabs-container">
        <div class="tabs left">
            @if(Model.CanManageComponents){<span data-tab="components" class="tab normal">@GetResource(ResourceKeys.Components)</span>}
            @if(Model.CanManageVersions){<span class="breaker">&nbsp;</span><span data-tab="versions" class="tab normal">@GetResource(ResourceKeys.Versions)</span>}
            @if(Model.CanManageDefaults){<span class="breaker">&nbsp;</span><span data-tab="defaults" class="tab normal">@GetResource(ResourceKeys.Defaults)</span>}
            @if(Model.CanManageDefaults && Model.HasCustomFieldDataPerProject)
            {
                <span class="breaker">&nbsp;</span>
                <span data-tab="cflookup" class="tab normal">@GetResource(ResourceKeys.CustomLookupData)</span>
            }
        </div>
    </div>

    <div class="clearfix margin-bottom-20"></div>

    <div id="setting-zone">
        
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function() {
        gemini_projects.initSettings(@Model.ProjectId);
    });
</script>